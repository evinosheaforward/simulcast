{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "outDir": "./dist",                     
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
